<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_permission_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_launcher_foreground" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_permission_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@id/iv_permission_icon"
            app:layout_constraintStart_toEndOf="@id/iv_permission_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Camera" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_permission_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_permission_label"
            app:layout_constraintStart_toEndOf="@id/iv_permission_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Take pictures and videos" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_permission_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:textColor="@android:color/tertiary_text_light"
            android:fontFamily="monospace"
            app:layout_constraintTop_toBottomOf="@id/tv_permission_description"
            app:layout_constraintStart_toEndOf="@id/iv_permission_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="android.permission.CAMERA" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_permission_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="monospace"
            app:layout_constraintTop_toBottomOf="@id/tv_permission_name"
            app:layout_constraintStart_toEndOf="@id/iv_permission_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Group: android.permission-group.CAMERA" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_permission_protection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:textColor="@android:color/holo_orange_dark"
            android:fontFamily="monospace"
            app:layout_constraintTop_toBottomOf="@id/tv_permission_group"
            app:layout_constraintStart_toEndOf="@id/iv_permission_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Protection: dangerous" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
